{
	"include": ["src"],
	"exclude": [
		"esm",
		"cjs",
		"lib",
		"node_modules"
	],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": false,
    "downlevelIteration": true
  }
}
